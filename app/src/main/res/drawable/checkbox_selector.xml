<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <stroke android:color="@color/checkbox_stroke_checked" android:width="2dp"/>
            <solid android:color="@color/checkbox_bg_checked"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <stroke android:color="@color/checkbox_stroke_unchecked" android:width="2dp"/>
            <solid android:color="@color/checkbox_bg_unchecked"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>
</selector>